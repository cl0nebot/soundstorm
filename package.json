{
  "name": "soundstorm",
  "private": true,
  "dependencies": {
    "@rails/webpacker": "3.5",
    "activestorage": "^5.2.1",
    "howler": "^2.0.15",
    "moment": "^2.22.2",
    "moment-duration-format": "^2.2.2",
    "normalize.css": "^8.0.1",
    "rails-ujs": "^5.2.1",
    "stimulus": "^1.1.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "turbolinks": "^5.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.9.0",
    "eslint-config-standard": "^12.0.0",
    "stylelint": "^9.8.0",
    "stylelint-scss": "^3.4.0",
    "webpack-dev-server": "2.11.2"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "none"
        }
      ],
      "no-trailing-spaces": [
        "error"
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2
        }
      ],
      "prefer-const": [
        "error"
      ],
      "getter-return": [
        "error"
      ],
      "curly": [
        "error",
        "multi-line"
      ]
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "modules": false,
          "targets": {
            "browsers": "> 1%",
            "uglify": true
          },
          "useBuiltIns": true
        }
      ]
    ],
    "plugins": [
      "syntax-dynamic-import",
      "transform-object-rest-spread",
      [
        "transform-class-properties",
        {
          "spec": true
        }
      ]
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-recommended-scss",
    "rules": {
      "block-no-empty": null
    }
  }
}
